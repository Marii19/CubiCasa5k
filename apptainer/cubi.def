Bootstrap: docker
From: pytorch/pytorch:1.9.1-cuda11.1-cudnn8-devel
#From: nvidia/cuda:11.4.2-cudnn8-devel-ubuntu20.04
#From: pytorch/pytorch:1.1.0-cuda10.0-cudnn7.5-runtime
#From: pytorch/pytorch:1.6.0-cuda10.1-cudnn7-runtime
#From: pytorch/pytorch:1.2-cuda10.0-cudnn7-runtime
#From: pytorch/pytorch:1.4-cuda10.1-cudnn7-runtime
#From: pytorch/pytorch:latest



%files
    ../requirements.txt /opt

%post
  rm /etc/apt/sources.list.d/cuda.list
  rm /etc/apt/sources.list.d/nvidia-ml.list
  apt-key del 7fa2af80

  apt-get update
  apt-get install --no-install-recommends --assume-yes curl


  # Installs the dependencies of the test case
  conda install --yes termcolor
  apt-get -y install libgtk2.0-dev
  conda install -y python=3.6.5
  python --version

  python -m pip install -r /opt/requirements.txt

    

%runscript
  export PYTHONWARNINGS="ignore"
  nvidia-smi
  "$@"
